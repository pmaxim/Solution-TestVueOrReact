<div id="app">
    <input type="text" v-on:input="setMessage" />
    <p>{{message}}</p>
</div>


@section Scripts{
    <script src="https://unpkg.com/vue@next"></script>
    <script>
        Vue.createApp({
            data() {
                return {
                    message: 'Hello Vue 3!'
                }
            },
            methods: {
                setMessage(event) {
                    this.message = event.target.value;
                }
            }
        }).mount('#app');
    </script>
}